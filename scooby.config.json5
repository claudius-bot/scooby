{
  // Scooby Configuration
  models: {
    fast: {
      candidates: [
        { provider: "openai", model: "gpt-4o-mini" },
        { provider: "anthropic", model: "claude-3-5-haiku-20241022" },
      ],
    },
    slow: {
      candidates: [
        { provider: "anthropic", model: "claude-sonnet-4-20250514" },
        { provider: "openai", model: "gpt-4o" },
      ],
    },
    embedding: {
      provider: "openai",
      model: "text-embedding-3-small",
    },
  },

  workspaces: [
    {
      id: "default",
      path: "./workspaces/default",
      permissions: {
        sandbox: true,
      },
    },
  ],

  channels: {
    telegram: {
      botToken: "${TELEGRAM_BOT_TOKEN}",
    },
    webchat: {
      enabled: true,
    },
  },

  gateway: {
    host: "0.0.0.0",
    port: 3000,
    websocket: {
      path: "/ws",
    },
  },

  session: {
    idleResetMinutes: 30,
    maxTranscriptLines: 500,
  },

  heartbeat: {
    intervalMinutes: 5,
  },
}
